plugins=($plugins brew)

test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"

export JAVA_HOME="$(/usr/libexec/java_home -v 1.8)"
export LD_LIBRARY_PATH=$JAVA_HOME/jre/lib/server

export PATH=/usr/local/opt/python/libexec/bin
export PATH=$PATH:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/X11/bin:/usr/texbin
#export PATH=$PATH:/usr/local/heroku/bin
export PATH=$PATH:/usr/local/opt/go/libexec/bin

### ALIAS
#alias rstudio='LD_LIBRARY_PATH=$JAVA_HOME/jre/lib/server: open -a RStudio .'

function tabc() {
  NAME=$1; if [ -z "$NAME" ]; then NAME="Default"; fi 
  # if you have trouble with this, change
  # "Default" to the name of your default theme
  echo -e "\033]50;SetProfile=$NAME\a"
}

function tab-reset() {
    NAME="Default"
    echo -e "\033]50;SetProfile=$NAME\a"
}

function colorssh() {
    if [[ -n "$ITERM_SESSION_ID" ]]; then
        trap "tab-reset" INT EXIT
        #if [[ "$*" =~ "web*|production|ec2-.*compute-1" ]]; then
          tabc RemoteSession
        #fi
    fi
    ssh $*
}
compdef _ssh tabc=ssh

alias ssh="colorssh"

